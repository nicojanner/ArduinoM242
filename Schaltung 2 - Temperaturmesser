//declaring all led's
int led8 = 8;
int led9 = 9;
int led10 = 10;
int led11 = 11;
int led12 = 12;

//declaring variables for temperature
int temperature = A0;
int degres = 0;
int finalTemperature = 0;


void setup(){
  pinMode(led8, OUTPUT);
  pinMode(led9, OUTPUT);
  pinMode(led10, OUTPUT);
  pinMode(led11, OUTPUT);
  pinMode(led12, OUTPUT);
  pinMode(temperature, INPUT); 
  
  Serial.begin(9600);
  analogReference(INTERNAL);
  
} 

void loop() {
  degres = analogRead(temperature);

//between -40 degres and 10 degres
if((degres < 465) && (degres <= 558)){
  digitalWrite(led8, HIGH);
  digitalWrite(led9, LOW); 
  digitalWrite(led10, LOW); 
  digitalWrite(led11, LOW);
  digitalWrite(led12, LOW); 
  
}

 //between 11 degres and 20 degres
 else if((degres > 558) && (degres <= 660)){
  digitalWrite(led8, LOW);
  digitalWrite(led9, HIGH); 
  digitalWrite(led10, LOW); 
  digitalWrite(led11, LOW);
  digitalWrite(led12, LOW); 
}

//between 21 degres and 30 degres  
else if((degres > 660) && (degres <= 753)){
  digitalWrite(led8, LOW); 
  digitalWrite(led9, LOW); 
  digitalWrite(led10, HIGH); 
  digitalWrite(led11, LOW);
  digitalWrite(led12, LOW); 
}

//between 31 degres and 40 degres
else if((degres > 753) && (degres <= 846)){ 
  digitalWrite(led8, LOW);
  digitalWrite(led9, LOW); 
  digitalWrite(led10, LOW); 
  digitalWrite(led11, HIGH);
  digitalWrite(led12, LOW);
}

//between 41 degres and 125 degres (maximum)
else if((degres > 846) && (degres > 939)){
  digitalWrite(led8, LOW); 
  digitalWrite(led9, LOW); 
  digitalWrite(led10, LOW);
  digitalWrite(led11, LOW);
  digitalWrite(led12, HIGH); 
}
}
